[user]
	email = ben@make-things.com
	name = Ben Kutil
[core]
	editor = subl -w
	whitespace=fix,-indent-with-non-tab,trailing-space,space-before-tab

	autocrlf = input
[alias]
	co = checkout
	ci = commit
	st = status
	pu = push
	pl = pull
	pub = "!f() { git push ${1:-origin} `git symbolic-ref HEAD`; }; f"
	br = branch
	df = diff
	lg = log -p
	lgp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	who = shortlog -s --
	edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; mate `f`"
	add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
	whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
	whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
	prune-all = !git remote | xargs -n 1 git remote prune
	serve = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
	kcon = !gitk --left-right HEAD...MERGE_HEAD
	changes=diff --name-status -r
	diffstat=diff --stat -r
	lc = log ORIG_HEAD.. --stat --no-merges
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true
	pager = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	header = white
	added = green
	changed = yellow bold
	untracked = white dim
	renamed = pink

[svn]


[push]
	default = simple

[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
[merge]
	tool = Kaleidoscope
